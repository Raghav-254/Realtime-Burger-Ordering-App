<!-- Hero Section Starts -->
<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between px-20">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-2xl md:text-6xl font-bold">Don't Wait!</h1>
            <a href="#all-burgers"><button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button></a>
        </div>

        <div id="slider">
            <figure>
                <img src="img/b10.jpg" alt>
                <img src="img/b2.jpg" alt>
                <img src="img/b5.jpg" alt>
                <img src="img/b4.jpg" alt>
                <img src="img/b10.jpg" alt>
            </figure>
        </div>
    </div>
</section>
<!-- Hero Section Ends -->

<!-- Menu Section Starts -->
<section class="menu container mx-auto py-8 px-20">
    <h1 class="text-xl font-bold mb-8" id="all-burgers">Our Menu</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-12">
        <% pizzas.forEach(function(pizza) { %>
            <div>
                <div>
                    <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image%>" alt="">
                </div>
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name%></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size%></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= pizza.price%></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart rounded-full py-1 px-6 flex items-center">
                            <span>+</span>
                            <span class="ml-4">ADD</span>
                        </button>
                    </div>
                </div> 
            </div>
        <% }) %>

    </div>
</section>